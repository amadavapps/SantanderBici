<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdasd"
        android:id="@+id/txtDirection"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adapter.title.totalbikes"
        android:id="@+id/txtTitleTotalBikes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtDirection"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adapter.title.freebikes"
        android:id="@+id/txtTitleFreeBikes"
        android:layout_below="@+id/txtTitleTotalBikes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adapter.title.freeplaces"
        android:id="@+id/txtTitleFreePlaces"
        android:layout_below="@+id/txtTitleFreeBikes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTotalBikes"
        android:layout_above="@+id/txtFreeBikes"
        android:layout_toRightOf="@+id/txtTitleFreePlaces"
        android:layout_toEndOf="@+id/txtTitleFreePlaces" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFreeBikes"
        android:layout_alignTop="@+id/txtTitleFreeBikes"
        android:layout_alignLeft="@+id/txtTotalBikes"
        android:layout_alignStart="@+id/txtTotalBikes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFreePlaces"
        android:layout_alignTop="@+id/txtTitleFreePlaces"
        android:layout_alignLeft="@+id/txtFreeBikes"
        android:layout_alignStart="@+id/txtFreeBikes" />

</RelativeLayout>